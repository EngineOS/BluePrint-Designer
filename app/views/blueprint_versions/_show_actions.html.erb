<% if params[:action] == 'show' %>
  <div class="btn-toolbar pull-right">


    <div class="btn-group dropdown pull-right">
      <button type="button" class="btn btn-lg btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li>
          <a id="show_software_details" class="btn btn-lg">
             <span class="caret"></span> Software detail
          </a>
        </li>
        <li><%= link_to '{} As json', blueprint_version_publish_path(@blueprint_version), class: "btn-lg trigger-response-modal" %></li>
        <li><%= link_to content_tag(:i, "", class: "fa fa-git-square") + ' Commit', blueprint_version_commit_to_local_repository_path(@blueprint_version), class: "btn-lg trigger-response-modal" %></li>
        <li role="presentation" class="divider"></li>
        <li><%= link_to content_tag(:i, "", class: "fa fa-copy") + ' Duplicate', blueprint_version_duplicate_path(@blueprint_version), class: "btn-lg trigger-response-modal" %></li>
      </ul>
    </div>

  </div>

  <div id="software_detail_panel">
    <div class='panel panel-default top-gap'>
      <div class='panel-body'>
        <%= render 'shared/show/default_attributes', record_object: @blueprint_version.software_version.software %>
      </div>
    </div>
    <div class='panel panel-default top-gap'>
      <div class='panel-body'>
        <%= render 'shared/show/default_attributes', record_object: @blueprint_version.software_version, attributes: [:version] %>
      </div>
    </div>
  </div>


<% else %>

    <div class="btn-group dropdown pull-right">
      <button type="button" class="btn btn-lg btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to content_tag(:i, "", class: "fa fa-git-square") + ' Commit', blueprint_version_commit_to_local_repository_path(@blueprint_version), class: "btn-lg trigger-response-modal" %></li>
      </ul>
    </div>

<% end %>


