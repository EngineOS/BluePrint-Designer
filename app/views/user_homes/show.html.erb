<%= content_tag :div, class: 'col-sm-9' do %>
  <%= content_tag :h2 do %>
    <%= content_tag(:i, '', class: 'fa fa-user') %> Admin user
  <% end %>
<% end %>
<%= content_tag :div, class: 'col-sm-3' do %>
  <div class="btn-toolbar pull-right top-gap">
    <div class="btn-group dropdown pull-right">
      <button type="button" class="btn btn-lg btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to (content_tag(:i, "", class: "fa fa-floppy-o") + ' Commit settings'), commit_setting_path, class: 'trigger-response-modal btn-lg' %></li>
      </ul>
    </div>
  </div>
<% end %>

<%= content_tag :div, class: 'col-sm-12' do %>
  <%= content_tag :div, class: 'top-gap' do %>
    <% current_user.tap do |user| %>
      <%= content_tag :div, class: 'panel panel-default' do %>
        <%= content_tag :div, class: 'panel-heading clearfix' do %>
          <%= user.username %> (<%= user.email.blank? ? 'No email address!' : user.email %>)
          <div class="btn-toolbar pull-right">
            <div class="btn-group">
              <%= link_to (content_tag(:i, "", class: "fa fa-edit") + " Edit"), edit_user_registration_path, class: 'trigger-response-modal btn btn-lg' %>
            </div>
          </div>
        <% end %>
        <%= content_tag :div, class: 'panel-body' do %>
          <%= render 'shared/show/inline_labelled_text', label: 'Email', text: user.email  %>
          <%= render 'shared/show/inline_labelled_text', label: 'Signin count', text: user.sign_in_count  %>
          <%= render 'shared/show/inline_labelled_text', label: 'Current signin', text: user.current_sign_in_at  %>
          <%= render 'shared/show/inline_labelled_text', label: 'Last signin', text: user.last_sign_in_at  %>
          <%= render 'shared/show/inline_labelled_text', label: 'Current IP', text: user.current_sign_in_ip  %>
          <%= render 'shared/show/inline_labelled_text', label: 'Last IP', text: user.last_sign_in_ip  %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>

<% end %>
