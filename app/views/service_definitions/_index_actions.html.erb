  <div class="btn-toolbar pull-right">

    <div class="btn-group dropdown pull-right">
      <button type="button" class="btn btn-lg btn-primary dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bars"></i>&nbsp<span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to content_tag(:i, nil, class: "fa fa-download") + " Load all from repository",
              repository_load_service_definitions_path,
              class: 'btn-lg',
              data: {
                confirm: 'Are you sure that you want to load all service definitions from the repository? All existing service definitions will be replaced by those from the repository.',
                confirm_title: 'Confirm load' } %></li>
        <li><%= link_to content_tag(:i, nil, class: "fa fa-upload") + " Commit all to repository",
              service_definitions_commit_path,
              class: 'btn-lg',
              data: {
                confirm: 'Are you sure that you want to commit all service definitions to the repository?',
                confirm_title: 'Confirm commit' } %></li>
        <li class="divider"></li>
        <li><%= link_to content_tag(:i, nil, class: "fa fa-floppy-o") + " Repository", repository_service_definitions_path, class: 'btn-lg trigger-response-modal' %></li>
      </ul>
    </div>

  </div>
