<%  record_object ||= nil
    if record_object
      record_class_name = record_object.class.to_s.underscore
      label ||= record_class_name.humanize
      offset ||= offset
      width ||= width
      buffer ||= buffer
      new_record_path ||= [:new, record_class_name]
      attributes ||= nil
      cancel_path ||= record_object
%>

  <%= form_for record_object do |f| %>
    <%= render 'shared/form/errors',f: f, attributes: attributes, label: label, offset: offset, width: width, buffer: buffer %>
    <%= render 'shared/form/default_fields',f: f, attributes: attributes, label: label, offset: offset, width: width, buffer: buffer %>
    <%= render 'shared/form/cancel_and_submit_buttons', f: f, cancel_path: cancel_path  %>
  <% end %>

<% end %>
