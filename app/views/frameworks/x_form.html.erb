<%= form_for @framework do |f| %>
  <%= render 'shared/form/errors', f: f %>
  <%= render 'shared/form/text_field', name: :name, f: f %>
  <%= render 'shared/form/text_field', name: :comment, f: f %>
  <%= render 'shared/form/association_select', name: :language, f: f %>
  <%= render 'shared/form/cancel_and_submit_buttons', f: f, cancel_path: @software  %>
<% end %>